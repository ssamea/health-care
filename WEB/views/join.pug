extends layouts/main

block content
    .form-container
        form(action=router.join, method="post")
            div
                input(type="id", name="id", placeholder="id")
                input(type="domain", name="domain", placeholder="주소")
            input(type="password", name="password", placeholder="password")
            input(type="password", name="password2", placeholder="Re-password")
            input(type="name", name="name", placeholder="이름")
            input(type="radio", name="gender", value="남")
            label(for="남") 남성
            input(type="radio", name="gender", value="여")
            label(for="여") 여성
            div
                input(type="number", min="0", max="120", name="age", placeholder="나이")
                input(type="number", min="50", max="250", name="height", placeholder="키")
                input(type="number", min="10", max="500", name="weight", placeholder="몸무게")
            input(type="submit", value="확인")
        
