<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC"
    tools:context=".FoodInput">


    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boarder_layout"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="오늘 나의 하루 칼로리"
            android:textColor="#ff000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/eat_kcal"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="57dp"
            android:layout_toRightOf="@+id/progressBar2"
            android:text="0 kcal"
            android:textColor="#ff000000"
            android:textSize="18dp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eat_kcal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:progress="0"
            android:progressTint="@color/teal_200" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re1"
        android:background="@drawable/boarder_layout"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/morning_btn"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/oval"
            android:text="아침"
            android:textColor="#ff000000"
            android:textSize="10dp" />

        <Button
            android:id="@+id/launch_btn"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/oval"
            android:layout_toRightOf="@+id/morning_btn"
            android:text="점심"
            android:textColor="#ff000000"
            android:textSize="10dp" />


        <Button
            android:id="@+id/dinner_btn"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/oval"
            android:layout_toRightOf="@+id/launch_btn"
            android:text="저녁"
            android:textColor="#ff000000"
            android:textSize="10dp" />

        <Button
            android:id="@+id/dessert_btn"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_below="@+id/morning_btn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/oval"
            android:gravity="center"
            android:text="간식"
            android:textColor="#ff000000"
            android:textSize="10dp" />


    </RelativeLayout>


</RelativeLayout>